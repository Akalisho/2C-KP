<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
x:Class="ProstaListaZadan.MainPage"
Title="Lista zadań">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            
            <Label Text="Nowe zadanie:"
                    FontSize="22"
                    FontAttributes="Bold"
                    Margin="0,10,0,0"/>

            <Grid ColumnDefinitions="*, Auto">
                <Entry x:Name="EntryNoweZadanie"
Grid.Column="0"
Placeholder="Wpisz zadanie..." />

                <Button Grid.Column="1"
                        Text="Dodaj"
                        Clicked="PrzyciskDodaj_Clicked"
                        BackgroundColor="#4CAF50"
                        TextColor="White"
                        Margin="5,0,0,0" />
            </Grid>

            
            <Label Text="Lista zadań:"
                    FontSize="22"
                    FontAttributes="Bold"
                    Margin="0,20,0,0"/>

            <VerticalStackLayout x:Name="ListaZadan"
                                    Spacing="10">
                
                <Label x:Name="LabelBrakZadan"
                        Text="Brak zadań do wyświetlenia."
                        IsVisible="true"
                        TextColor="Gray"
                        FontSize="16" />
            </VerticalStackLayout>

            
            <Label Text="Usunięte zadania:"
                    FontSize="22"
                    FontAttributes="Bold"
                    Margin="0,30,0,0"/>

            <VerticalStackLayout x:Name="ListaUsunietychZadan"
                                    Spacing="10">
                
                <Label x:Name="LabelBrakUsunietych"
                        Text="Brak usuniętych zadań."
                        IsVisible="true"
                        TextColor="Gray"
                        FontSize="16" />
            </VerticalStackLayout>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>